extends layout

block content
  .jumbotron
    h2 Login
    form.form-horizontal(action="/login", method="post")
      .form-group.row
        label.col-lg-2.control-label(for='username') Username
        .col-lg-2
          input.form-control(type='text', id="username", name="username")

      .form-group.row
        label.col-lg-2.control-label(for='password') Password
        .col-lg-2
          input.form-control(type='password', id="password", name="password")

      .form-group.row
        .col-lg-2.control-label
          input.btn.btn-primary(type='submit', value="Submit")
